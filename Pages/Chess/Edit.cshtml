@page
@model RazorPagesChess.Pages_Chess.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chess</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Chess.ID" />
            <div class="form-group">
                <label asp-for="Chess.quardLetter" class="control-label"></label>
                <input asp-for="Chess.quardLetter" class="form-control" />
                <span asp-validation-for="Chess.quardLetter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chess.quardNumber" class="control-label"></label>
                <input asp-for="Chess.quardNumber" class="form-control" />
                <span asp-validation-for="Chess.quardNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Chess.inCheck" /> @Html.DisplayNameFor(model => model.Chess.inCheck)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Chess.colour" /> @Html.DisplayNameFor(model => model.Chess.colour)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
